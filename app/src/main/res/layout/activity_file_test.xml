<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".filetest.FileTestActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/fileTest1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="glide下载图片" />

            <ImageView
                android:id="@+id/fileTest2"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <Button
                android:id="@+id/fileTest3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="glide下载文件1" />

            <Button
                android:id="@+id/fileTest4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="glide下载文件2" />

            <Button
                android:id="@+id/fileTest5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="glide下载文件3" />

            <Button
                android:id="@+id/fileTest6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试datastore存储" />

            <Button
                android:id="@+id/fileTest7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试datastore存储String类型" />

            <Button
                android:id="@+id/fileTest8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试datastore存储jsonstring" />

            <Button
                android:id="@+id/fileTest9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="获取datastore存储jsonstring" />

            <Button
                android:id="@+id/fileTest10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="更新datastore存储jsonstring" />

            <Button
                android:id="@+id/fileTest11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="封装插入model" />

            <Button
                android:id="@+id/fileTest12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="封装获取model" />

            <Button
                android:id="@+id/fileTest13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="封装更新model" />

            <Button
                android:id="@+id/fileTest14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="封装获取最新的model" />

            <Button
                android:id="@+id/fileTest15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="通过mmkv持久化存储" />

            <Button
                android:id="@+id/fileTest16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="通过mmkv获取持久化存储对象" />

            <Button
                android:id="@+id/fileTest17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试计时器" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
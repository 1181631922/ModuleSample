<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".taobaomain.TaoBaoMainActivity">

    <com.ripple.ui.stickyrecyclerview.StickyRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nestedTopRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/nestedIndicator"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            app:tabGravity="center"
            app:tabIndicatorColor="#0ddcff"
            app:tabMode="fixed" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/nestedViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.ripple.ui.stickyrecyclerview.StickyRecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>
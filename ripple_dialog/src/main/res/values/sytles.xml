<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  dialog默认样式兼容dialog fragment  -->
    <style name="RippleDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--dialog默认动画-->
    <style name="RippleMenuAnimation">
        <item name="android:windowEnterAnimation">@anim/ripple_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/ripple_dialog_out_anim</item>
    </style>

</resources>
